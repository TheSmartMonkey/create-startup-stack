{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "strict": false,
    "lib": ["es2015"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@api/*": ["src/api/*"],
      "@db/*": ["../common/db/*"],
      "@helpers/*": ["src/helpers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["../../shared/models/*"],
      "@services/*": ["../common/services/*"],
      "@libs/*": ["../common/libs/*"],
      "@tests/*": ["src/tests/*"],
    }
  },
  "include": ["src", "serverless.ts", "../common/libs/logger.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
